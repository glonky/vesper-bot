{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "inlineSources": true, // TODO: Do we want this?
    "strict": true,
    "target": "es2019"
  },
  "compileOnSave": false,
  "include": ["<rootDir>/src"],
  "exclude": ["node_modules", "coverage", "dist"],
  "ts-node": {
    "transpileOnly": true,
    "transpiler": "ts-node/transpilers/swc-experimental"
  }
}
