{
  "name": "@vesper/discord-bot",
  "version": "1.0.0",
  "author": "Glonky <glonky.sailor@gmail.com>",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/glonky/vesper-discord-bot.git"
  },
  "private": true,
  "engines": {
    "node": "12.20.0 || 14.13.1 || >=16.0.0"
  },
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "concurrently 'printf \"y\n\" | lerna clean' 'tsc -b --clean' 'lerna run clean --parallel' \"lerna exec 'rm -rf coverage dist **.d.ts.* .eslintcache' --parallel\"",
    "prepare": "is-ci || husky install",
    "test": "jest --config jest.config.cjs",
    "test:watch": "yarn test --watch",
    "test:ci": "yarn test --ci --silent --forceExit --detectOpenHandles --bail --passWithNoTests",
    "build": "tsc -b",
    "lint": "eslint --cache .",
    "lint:fix": "yarn lint --fix",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "reflect-metadata": "0.1.13"
  },
  "devDependencies": {
    "@commitlint/cli": "16.0.2",
    "@commitlint/config-conventional": "16.0.0",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.2",
    "@semantic-release/npm": "8.0.3",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@swc/core": "1.2.128",
    "@swc/helpers": "0.3.2",
    "@types/dotenv-flow": "3.2.0",
    "@types/jest": "27.4.0",
    "@types/node": "17.0.8",
    "@typescript-eslint/eslint-plugin": "5.9.1",
    "@typescript-eslint/parser": "5.9.1",
    "commitizen": "4.2.4",
    "concurrently": "7.0.0",
    "conventional-changelog-cli": "2.2.2",
    "cz-conventional-changelog": "3.3.0",
    "esbuild": "0.14.11",
    "esbuild-jest": "0.5.0",
    "eslint": "8.6.0",
    "eslint-config-airbnb-typescript": "16.1.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-cypress": "2.12.1",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jest": "25.3.4",
    "eslint-plugin-jest-formatting": "3.1.0",
    "eslint-plugin-json": "3.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-sort-keys-fix": "1.1.2",
    "eslint-plugin-unused-imports": "2.0.0",
    "husky": "7.0.4",
    "is-ci": "3.0.1",
    "jest": "27.4.7",
    "lerna": "4.0.0",
    "lint-staged": "12.1.7",
    "prettier": "2.5.1",
    "regenerator-runtime": "0.13.9",
    "semantic-release": "18.0.1",
    "ts-jest": "27.1.2",
    "ts-node": "10.4.0",
    "ts-node-dev": "1.1.8",
    "tslib": "2.3.1",
    "typescript": "4.5.4"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
