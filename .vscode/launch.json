{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Start Server",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/packages/shared-server/src/index.ts",
      "preLaunchTask": "npm: build",
      "outFiles": ["${workspaceFolder}/packages/**/dist/**/*.js"],
      "sourceMaps": true,
      "smartStep": true,
      "console": "integratedTerminal"
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Deploy Commands",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/scripts/deploy-commands.ts",
      "preLaunchTask": "npm: build",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "sourceMaps": true,
      "smartStep": true,
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "scripts: test",
      "sourceMaps": true,
      "smartStep": true,
      "preLaunchTask": "npm: build",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/packages/scripts/bin/run",
      "console": "integratedTerminal",
      "args": ["test"]
    },
    {
      "type": "node",
      "name": "vscode-jest-tests",
      "request": "launch",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "smartStep": true,
      "preLaunchTask": "npm: build",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "yarn",
      "args": ["test", "--runInBand", "--watchAll=false", "--color", "--coverage=false"]
    }
  ]
}
