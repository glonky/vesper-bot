{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Start Server",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/packages/shared-server/src/index.ts",
      "preLaunchTask": "npm: build",
      "outFiles": ["${workspaceFolder}/packages/**/dist/**/*.js"],
      "sourceMaps": true,
      "smartStep": true,
      "console": "integratedTerminal"
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Deploy Commands",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/scripts/deploy-commands.ts",
      "preLaunchTask": "npm: build",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "sourceMaps": true,
      "smartStep": true,
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "scripts: test-command",
      "sourceMaps": true,
      "smartStep": true,
      "preLaunchTask": "npm: build",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/packages/scripts/bin/run",
      "console": "integratedTerminal",
      "args": ["test-command"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "scripts: call-blockchain-method",
      "sourceMaps": true,
      "smartStep": true,
      "preLaunchTask": "npm: build",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/packages/scripts/bin/run",
      "console": "integratedTerminal",
      "args": ["call-blockahin-method", "-m", "getStrategies", "-a", "0x75619E9F479f9415630d21dDc99919da47c0a737"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "scripts: get-reward-amount",
      "sourceMaps": true,
      "smartStep": true,
      "preLaunchTask": "npm: build",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/packages/scripts/bin/run",
      "console": "integratedTerminal",
      "args": ["get-reward-amount", "-t", "0x11e0494a6f27cf13047051b1cecf1770ff9f6cb575a4f2f7499124341dd3018e"]
    },
    {
      "type": "node",
      "name": "vscode-jest-tests",
      "request": "launch",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "smartStep": true,
      "preLaunchTask": "npm: build",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "yarn",
      "args": ["test", "--runInBand", "--watchAll=false", "--color", "--coverage=false"]
    }
  ]
}
